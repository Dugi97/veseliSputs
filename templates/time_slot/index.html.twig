{% extends 'base.html.twig' %}

{% block title %}TimeSlot index{% endblock %}

{% block body %}
    <h1>TimeSlot index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Period</th>
                <th>Capacity</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for time_slot in time_slots %}
            <tr>
                <td>{{ time_slot.id }}</td>
                <td>{{ time_slot.period }}</td>
                <td>{{ time_slot.capacity }}</td>
                <td>
                    <a href="{{ path('time_slot_show', {'id': time_slot.id}) }}">show</a>
                    <a href="{{ path('time_slot_edit', {'id': time_slot.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('time_slot_new') }}">Create new</a>
{% endblock %}
